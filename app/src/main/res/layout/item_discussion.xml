<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/common_bg_touch"
                android:orientation="vertical"
                android:padding="10dp">

    <ImageView
        android:id="@+id/discussion_iv_portrait"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_default_portrait" />

    <TextView
        android:id="@+id/discussion_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/discussion_iv_portrait"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="我就是静静"
        android:textColor="@color/nb.text.user_name"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/discussion_tv_lv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/discussion_tv_name"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="@string/nb.section.user_lv"
        android:textColor="@color/nb.text.user_name"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/discussion_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/nb.text.common_h3"
        android:textSize="13sp"
        android:visibility="gone"
        tools:text="昨天"
        tools:visibility="visible"/>

    <TextView
        android:id="@+id/discussion_tv_label_hot"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/shape_hot_bg"
        android:drawableLeft="@drawable/ic_topic_hot"
        android:drawablePadding="5dp"
        android:ellipsize="end"
        android:gravity="center"
        android:padding="5dp"
        android:singleLine="true"
        android:text="热门"
        android:textColor="@color/white"
        android:textSize="8dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/discussion_tv_label_distillate"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/shape_distillate_bg"
        android:drawableLeft="@drawable/ic_topic_distillate"
        android:drawablePadding="5dp"
        android:ellipsize="end"
        android:gravity="center"
        android:padding="5dp"
        android:singleLine="true"
        android:text="精品"
        android:textColor="@color/white"
        android:textSize="8dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/discussion_tv_brief"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/discussion_tv_name"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/discussion_iv_portrait"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="越到后面越索然无味"
        android:textColor="@color/nb.text.default" />

    <TextView
        android:id="@+id/discussion_tv_response_count"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@id/discussion_tv_brief"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/discussion_iv_portrait"
        android:drawableLeft="@drawable/ic_notif_post"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:text="308"
        android:textColor="@color/nb.text.common_h3"
        android:textSize="13dp" />

    <TextView
        android:id="@+id/discussion_tv_like_count"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@id/discussion_tv_brief"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/discussion_tv_response_count"
        android:drawableLeft="@drawable/ic_book_review_like"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:text="308"
        android:textColor="@color/nb.text.common_h3"
        android:textSize="13dp" />

</RelativeLayout>